.primary-title.large {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 48rpx;
  font-size: 32rpx;
  font-weight: 400;
}
.primary-title::before {
  content: '';
  top: 50%;
  left: 0.5em;
  width: 8rpx;
  height: 1.2em;
  background-color: #dd0a19;
  position: absolute;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}
@keyframes rotates {
0% {
    transform: rotate(0deg);
}
100% {
    transform: rotate(360deg);
}
}
.songDetail .song-bg {
  opacity: 1;
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: auto 100%;
  transform: scale(1.5);
  transform-origin: center top;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  z-index: -1;
  transition: opacity .3s linear;
  filter: blur(10rpx);
}
.songDetail .song-bg:after {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  content: ' ';
  background-color: rgba(0, 0, 0, 0.8);
}
.songDetail .song-warp {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 200rpx;
  left: 0;
  z-index: 10;
}
.songDetail .song-warp ._p {
  color: #fff;
}
.songDetail .song-warp .song-inner {
  position: relative;
  margin-top: 60rpx;
  height: calc(100% - 60rpx);
  overflow: hidden;
}
.songDetail .song-name {
  color: #fff;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}
.songDetail .song-lyric {
  position: absolute;
  left: 100rpx;
  right: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  line-height: 2;
  text-align: center;
}
.songDetail .song-lyric .current {
  color: #fff;
}
.songDetail .no-lyric {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.songDetail .song-disc {
  position: relative;
  width: 520rpx;
  height: 520rpx;
  margin: 160rpx auto;
}
.songDetail .song-disc .song-disc-light {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-image: url("https://s3.music.126.net/m/s/img/disc_light-ip6.png?996fc8a2bc62e1ab3f51f135fc459577");
  background-size: contain;
  z-index: 1;
}
.songDetail .song-disc .song-disc-dark {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-image: url("https://s3.music.126.net/m/s/img/disc-ip6.png?69796123ad7cfe95781ea38aac8f2d48");
  background-size: contain;
  z-index: 2;
}
.songDetail .song-cover-wrapper {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 3;
}
.songDetail .song-cover-wrapper .song-cover {
  position: relative;
  width: 100%;
  height: 100%;
}
.songDetail .song-cover-wrapper .song-cover .song-cover-img {
  position: absolute;
  width: 400rpx;
  height: 400rpx;
  top: 12%;
  left: 12%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  animation: rotates 20s linear infinite;
}
.songDetail .song-play-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 160rpx;
  z-index: 10;
}
.songDetail .song-play-info .song-control {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
}
.songDetail .song-progress {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 40rpx;
}
.songDetail .song-progress .song-time {
  color: #fff;
  font-size: 20rpx;
}
.songDetail .song-progress .duration {
  margin-left: 10rpx;
}
.songDetail .song-progress .current-time {
  margin-right: 20rpx;
}
.songDetail .bar-bg {
  width: calc(100% - 84rpx);
  position: relative;
  height: 6rpx;
  background-color: #ccc;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.songDetail .bar-inner {
  height: 6rpx;
  background-color: #eb1e1c;
}
.songDetail .bar-point {
  margin-left: -12rpx;
  width: 6rpx;
  height: 6rpx;
  background-color: #eb1e1c;
  border: 12rpx solid #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}