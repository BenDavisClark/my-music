
page,
._h1,
._h2,
._h3,
._h4,
._h5,
._h6,
._hr,
._p,
._blockquote,
._dl,
._dt,
._dd,
._ul,
._ol,
._li,
._pre,
._form,
._fieldset,
._legend,
._button,
._input,
._textarea,
._th,
._td {
  margin: 0;
  padding: 0;
}
._h1,
._h2,
._h3,
._h4,
._h5,
._h6 {
  font-size: 100%;
}
._address,
._cite,
._dfn,
._em,
._var {
  font-style: normal;
}
._small {
  font-size: 24rpx;
}
._ul,
._ol {
  list-style: none;
}
._a {
  text-decoration: none;
}
._a:hover {
  cursor: pointer;
  text-decoration: underline;
}
._sup {
  vertical-align: text-top;
}
._sub {
  vertical-align: text-bottom;
}
._legend {
  color: #000;
}
._fieldset,
._img {
  border: 0;
}
._button,
._input,
._select,
._textarea {
  font-size: 100%;
}
._table {
  border-collapse: collapse;
  border-spacing: 0;
}
page {
  overflow-y: scroll;
  box-sizing: border-box;
}
._a:focus,
._a:active {
  outline: none;
}
.clearfix:after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
.row {
  margin: 40rpx 0;
}
.round {
  border-radius: 20rpx;
