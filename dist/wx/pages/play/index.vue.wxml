<template name="ddf7d786">
  <view class="_div data-v-3f41f1fa songDetail" wx:if="{{songDetail}}">
    <view class="_div data-v-3f41f1fa song-bg" style=" {{('background-image:' + ('url(' + songDetail.al.picUrl + ')') + ';')}}"></view>
    <view class="_div data-v-3f41f1fa song-warp mt2">
      <view class="_p data-v-3f41f1fa ft16 song-name">{{ songDetail.al.name }}</view>
      <view class="_p data-v-3f41f1fa ft12 song-name">{{ songDetail.ar[0].name }}</view>
      <view class="_hr data-v-3f41f1fa mt" style="color:#fff;"></view>
      <view class="_div data-v-3f41f1fa song-inner" bindtap="handleProxy" data-eventid="{{'0'}}" data-comkey="{{$k}}">
        <view class="_div data-v-3f41f1fa song-disc" wx:if="{{!lyricVisible}}">
          <view class="_div data-v-3f41f1fa song-disc-light"></view>
          <view class="_div data-v-3f41f1fa song-disc-dark"></view>
          <view class="_div data-v-3f41f1fa song-cover-wrapper">
            <view class="_div data-v-3f41f1fa song-cover {{[isPlaying ? 'rotate' : '']}}" wx:if="{{songDetail && songDetail.al}}">
              <image class="_img data-v-3f41f1fa song-cover-img" src="{{songDetail.al.picUrl}}"></image>
            </view>
          </view>
        </view>
        <view class="_div data-v-3f41f1fa song-lyric" wx:elif="{{lyricVisible && lyric}}" style=" {{('top:' + (lyricTop + 'px') + ';' + 'transition:' + 'all 1s ease' + ';')}}">
          <view wx:key="index" key="{{index}}" wx:for="{{lyric.lines}}" wx:for-index="index" wx:for-item="lyric" class="_div data-v-3f41f1fa {{[index === lyricCurrentLine ? 'current' : '']}}">
            {{ lyric.txt }}
          </view>
        </view>
        <view class="_div data-v-3f41f1fa no-lyric" wx:else> 纯音乐，请欣赏 </view>
      </view>
    </view>
    <view class="_div data-v-3f41f1fa song-play-info">
      <view class="_div data-v-3f41f1fa song-progress mb">
        <view class="_div data-v-3f41f1fa current-time song-time" style="margin-right: 15px;">{{ currentTime }}</view>
        <view class="_div data-v-3f41f1fa bar-bg" bindtap="handleProxy" data-eventid="{{'2'}}" data-comkey="{{$k}}">
          <view class="_div data-v-3f41f1fa bar-inner" style=" {{('width:' + (playProgress * 100 + '%') + ';')}}"></view>
          <view class="_div data-v-3f41f1fa bar-point" bindtouchmove="handleProxy" data-eventid="{{'1'}}" data-comkey="{{$k}}"></view>
        </view>
        <view class="_div data-v-3f41f1fa duration song-time">{{ duration }}</view>
      </view>
      <view class="_div data-v-3f41f1fa song-control">
        <van-icon name="replay" size="26px" color="#fff" class="_van-icon data-v-3f41f1fa"></van-icon>
        <van-icon name="arrow-left" size="26px" color="#fff" class="_van-icon data-v-3f41f1fa"></van-icon>
        <van-icon name="{{isPlaying ? 'pause' : 'play'}}" size="26px" color="#fff" bindtap="handleProxy" data-eventid="{{'3'}}" data-comkey="{{$k}}" class="_van-icon data-v-3f41f1fa"></van-icon>
        <van-icon name="arrow" size="26px" color="#fff" class="_van-icon data-v-3f41f1fa"></van-icon>
        <van-icon name="bars" size="26px" color="#fff" class="_van-icon data-v-3f41f1fa"></van-icon>
      </view>
    </view>
  </view>
</template>